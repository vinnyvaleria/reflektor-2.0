generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GameSession {
  id              String     @id @default(cuid())
  playerName      String?
  mapData         Json
  mirroredMapData Json
  currentPosition Json
  roundsUsed      Int        @default(0)
  stepsCount      Int        @default(0)
  helperUsage     Json       @default("[]")
  timeTaken       Int?
  score           Int?
  startTime       DateTime   @default(now())
  endTime         DateTime?
  status          GameStatus @default(PLAYING)
  difficulty      Difficulty @default(EASY)
  createdAt       DateTime   @default(now())

  @@map("game_sessions")
}

enum GameStatus {
  PLAYING
  WON
  LOST
  PAUSED
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
