generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // this will be updated to postgresql right before deployment
  url      = env("DATABASE_URL")
}

// user schema
model User {
  id              String        @id @default(cuid())
  username        String        @unique
  email           String        @unique
  password        String
  totalGamesPlayed Int          @default(0)
  bestRound       Int?
  bestTime        Int?
  totalSteps      Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  @@map("users")
}


// game session schema -> one session completed = one submission to global leaderboard
model GameSession {
  id              String       @id @default(cuid())
  playerName      String?      // optional name for leaderboard
  mapData         Json         // main grid data
  mirroredMapData Json         // mirrored grid data
  currentPosition Json         // player position {row, col, mirroredCol}
  roundsUsed      Int          @default(0)
  stepsCount      Int          @default(0)
  helperUsage     Json         @default("[]")  // used helpers
  timeTaken       Int?         // seconds to complete
  score           Int?         // calculated final score
  startTime       DateTime     @default(now())
  endTime         DateTime?
  status          GameStatus   @default(PLAYING)
  difficulty      Difficulty   @default(EASY)
  createdAt       DateTime     @default(now())
  
  @@map("game_sessions")
}

// leaderboard schema
model Leaderboard {
  id            String       @id @default(cuid())
  userId        String
  gameSessionId String       @unique
  roundsUsed    Int
  timeTaken     Int
  stepsCount    Int
  difficulty    Difficulty
  score         Int
  createdAt     DateTime     @default(now())
  
  @@map("leaderboard")
}

enum GameStatus {
  PLAYING
  WON
  LOST
  PAUSED
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
